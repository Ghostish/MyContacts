<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:minHeight="72dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/head_show"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_default_head_show_white_24dp"
            app:view_backgroundColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/head_show"
            android:layout_toStartOf="@+id/call_button"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/caller_name_or_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1350025156"
                android:textAppearance="?android:textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/call_type"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.76"/>

                <TextView
                    android:id="@+id/call_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Guangzhou,yesterday"
                    android:textAppearance="?android:textAppearanceSmall" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/call_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:alpha="0.76"
            android:scaleType="centerInside"
            android:src="@drawable/ic_call_black_24dp"
            android:background="?android:selectableItemBackground" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
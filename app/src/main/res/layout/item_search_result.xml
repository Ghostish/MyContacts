<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?selectableItemBackground"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_show"
        android:layout_width="@dimen/list_head_show_size"
        android:layout_height="@dimen/list_head_show_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head_show_list" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head_show"
        android:layout_toEndOf="@id/head_show"
        android:singleLine="true"
        android:text="Kangel Zenn"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/primary_text_light" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/head_show"
        android:layout_toEndOf="@+id/head_show"
        android:singleLine="true"
        android:text="13666025999"
        android:textColor="?android:textColorSecondary" />

    <TextView
        android:id="@+id/number_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/head_show"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:text="手机"
        android:textColor="?android:textColorSecondary" />
</RelativeLayout>


